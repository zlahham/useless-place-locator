<h1>Listing locations</h1><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td><%= link_to 'Show', location, :class=>"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_location_path(location), :class=>"btn btn-success" %> </td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @locations %>
<br>

<%= link_to 'New Location', new_location_path, :class=>"btn btn-info" %>

